<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="default" namespace="/" extends="struts-default,json-default">
        <action name="register" class="it.unicas.action.RegisterAction" method="execute">
            <result name="success">success.jsp</result>
            <result name="error">error.jsp</result>
        </action>
        <action name="login" class="it.unicas.action.LoginAction" method="execute">
            <result name="success" type="redirect">welcomeAction</result>
            <result name="'error">error.jsp</result>
            <result name="input">login.jsp</result>
        </action>
        <action name="welcomeAction" class="it.unicas.action.WelcomeAction" method="execute">
            <result name="success">success.jsp</result>
            <result name="input">login.jsp</result>
        </action>
    </package>
</struts>
